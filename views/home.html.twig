{% extends 'layout.html.twig' %}

{% block page_title %}{{ parent() }}{% endblock %}

{% block content %}
    <div class="popup-rename-file hide">
        <form action="?action=home&path={{ path }}" method="POST">
            <label for="new-name">New name:</label><br>
            <input type="text" id="new-name" name="new-name"><br>
            <input type="hidden" name="old-name">
            <input type="hidden" name="path">
            <input type="submit">
        </form>
    </div>
    <div class="error">
        {% for error in errors %}
            {{ error }} <br>
        {% endfor %}
    </div>
    {% for dir in dirs %}
        <a href="?action=home&path={{ path }}/{{ dir }}">{{ dir }}</a>
        <!--<span class="rename" data-path="{{ path }}/{{ dir }}">rename</span>-->
        <br>
    {% endfor %}
    <br>
    {% for file in files %}
        <a href="?action=home&download={{ path }}/{{ file }}&path={{ path }}">{{ file }}</a>
        <span class="rename-file" data-path="{{ path }}">rename</span>
        <br>
    {% endfor %}
{% endblock %}
